# CC: compiler to use
CC = gcc
# SRC: .c files
SRC = main.c holberton.c
# OBJ: .o files
OBJ = $(SRC: %.c=%.o)
# NAME: name of the executable
NAME = holberton
# RM: the program to delete files
RM = rm -f

.PHONY: all clean oclean fclean re
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
